
<%= form_tag("/add_target_lab", id: "add_lanb_form", method: 'post', enctype: 'multipart/form-data') do %>

	<%= text_field(:lab, :name, :helpText => "Lab Name", 
		:textCase => "lower",
	    :field_type => "text")%><br>
	
	<%= select_tag "district", options_for_select(['Lilongwe','Mzuzu','Salima']),
		{:helpText => "Select District",
	    :field_type => "text",
	    :tt_requireNextClick => false }%><br>

	<%= text_field(:lab, :phone, :helpText => "Phone Number", 
		:textCase => "lower",
	    :field_type => "number")%><br>	
	    
<% end %>
