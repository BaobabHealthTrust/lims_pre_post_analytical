
  <%= javascript_include_tag "jquery" %>
  <%= javascript_include_tag "bootstrap" %>
  <%= stylesheet_link_tag "bootstrap.min" %>
  <%= stylesheet_link_tag "extras/footer" %>
  <%= javascript_include_tag "sw.min" %>
  
<style type="text/css">
	
	#barcode-txt {
  border-color: black;
  border-style: solid;
  border-width: 0 0 1px;
  font-size: 30px;
  margin: 3% 4%;
  width: 60%
}	

</style>
<div style=" height: 97%; background: -moz-linear-gradient(right,#d3cce3,#e9e4f0 );" class="container-fluid"  >

	<div class="row">
		<div class="col-sm-4" style="height: 32%; margin-top: 1%; margin-left: 2%;
			 background: -moz-linear-gradient(right,rgba(62, 69, 81, 0.7),rgba(62, 69, 81, 0.3)); 
			 box-shadow: 10px 10px 5px #16222a;  border-radius: 2%;">

			<h1 style="color: white;text-shadow: 2px 2px 4px #000000;">LIMS Order Entry</h1>
				<p style="color: white;text-shadow: 2px 2px 4px #000000; font-weight:bold;">Facility Name <br/>
					<span class="color:white;" style="">Kawale Health Centre</span></p>

					<p style="color: white;text-shadow: 2px 2px 4px #000000;;font-weight:bold;">Ward/Location <br/>
					<span class="text-white" style=""><%= session[:ward] %></span>
				</p>

		</div>

		<div class="col-sm-7" style="margin-top: 1%;">
			<div style=" overflow: auto; height: 32%; padding-top: 1%;padding-left: 1%;padding-right: 1%;border: thin solid lightgrey;">
				<div>	
						<div class="col-sm-8">
							
					
						</div>
						<div class="col-sm-4">
							<div class="panel panel-default" style="color: blue;box-shadow: 10px 10px 5px #182848;">
								<h4 style="text-align: center;font-weight: bold;">Target Lab Settings</h4>
							</div>
							
						</div>
				</div>
				<div style="margin-top: 12.8%;">
					<div class="col-sm-4">
						<div class="panel panel-default" style="color: orange;box-shadow: 10px 10px 5px #182848;">
							<div  class="panel-heading" style="color: #1c2a48 ; font-weight:bold; text-align: center;">Orders with No Results</div>
							<div class="panel-body" style="color: #1c2a48;font-size: 2em;font-weight:bold; text-align: center;">0 </div>
						</div>
					</div>

					<div class="col-sm-4">
						<div class="panel panel-default" style="color:lightgreen;box-shadow: 10px 10px 5px #182848;">
							<% requested_sample = session[:requested_sample] %>
							<% if requested_sample >0 %>
								<div  class="panel-heading" style="color: red ; font-weight:bold; text-align: center;">	 
								  Requested Orders</div>
								<div class="panel-body" style="color:red; font-size: 2em; font-weight:bold; text-align: center;">
								 <%= requested_sample %> </div>
							<% else %>
								<div  class="panel-heading" style="color: #1c2a48; font-weight:bold; text-align: center;"> 
								  Requested Orders</div>
								<div class="panel-body" style="color: #1c2a48; font-size: 2em; font-weight:bold; text-align: center;">
								 <%= requested_sample %> 
								</div>
							<% end %>
						
						</div>
					</div>

					<div class="col-sm-4">
						<div class="panel panel-default" style="color: blue;box-shadow: 10px 10px 5px #182848;">
								<% undispatched_sample_count = session[:un_dis_sample] %>
								<% if undispatched_sample_count >0 %>
									<div  class="panel-heading" style="color:red; font-weight:bold; text-align: center;">Undispatched Samples</div>
									<div class="panel-body" style="font-size: 2em; color:red; font-weight:bold; text-align: center;">
										<%= undispatched_sample_count %></div>
								<% else %>
									<div  class="panel-heading" style="color:#1c2a48; font-weight:bold; text-align: center;">Undispatched Samples</div>
									<div class="panel-body" style="font-size: 2em; color:#1c2a48; font-weight:bold; text-align: center;">
									<%= undispatched_sample_count %></div>
								<% end %>

						</div>
					</div>
				</div>
			</div>
		</div>
	</div>





	<% added = "no" %>
	<% if !params[:added].blank? %>
		<% added = params[:added] %>
	<% end %>


	<div class="row">
		<div style="border-top: thick solid grey; height: 55%;margin-left: 2%;margin-right: 2%; margin-top: 1%;
		overflow: auto;
		">
			
			<div class="col-sm-offset-2 col-sm-8 col-sm-offset-2" style="margin-top: 2%; overflow-x: 10px;">
					<table class="table table-striped">
					<thead>
						<tr style="background: -moz-linear-gradient(right,rgba(62, 69, 81, 0.7),rgba(62, 69, 81, 0.3));color: white; ">
								<th>Lab Name</th>
								<th>District</th>
								<th>Contact Number</th>
								<th>Actions</th>
							</tr>
						</thead>
						<tbody id="labs">
							<% if @labs !="no labs" %>
								<% @labs.each do |lab| %>					
									<tr id ="<%= lab['id'] %>">
										<td><%= lab['name'] %></td>
										<td><%= lab['district_id'] %></td>
										<td><%= lab['phone_number'] %></td>
										<td>
											<button id ="<%= lab['id'] %>" class="btn btn-danger btn-lg" onmousedown="delete_lab(this.id)" >delete
											</button>
											<button id ="<%= lab['id'] %>" class="btn btn-primary btn-lg" onmousedown="document.location='/add_user_page_loader'" >edit
											</button>
										</td>
									</tr>			
								<% end %>
							<% else %>
								<tr>
									<td style="color: red;">no target labs added in the system, please add</td>
								</tr>				  
							<%end%>
						</tbody>
					</table>	
		    </div>
		</div>
	</div>

</div>
		



<div class="footer">
  <button class="btn-back btn btn-lg btn-success" onmousedown="document.location='/view_settings'" ><| Back</button>
  	<span style="float: right;">
			<button class="btn btns btn-lg btn-danger"	id="log_out" onmousedown="document.location='/home'">
	     				Cancel
	     	</button>
			<button class="btn btns btn-primary btn-lg" onmousedown="document.location='/add_target_lab_page_loader'" >Add Target Lab</button>
			<button class="btns btn btn-lg btn-danger" 
	     					id="log_out"
	     					onmousedown="document.location='/'">
	     				Log Out
	    	</button>	
	</span>
</div>

<script type="text/javascript">

	var va = '<%= added %>';

	if (va == 'yes')
	{
		swal("Confirmation","Ward Added Successfuly","success");
	}
	
	 function delete_lab(lab_id)
	 { 	var url_ = "/delete_lab?lab_id=" + lab_id;		
	 	
		jQuery.ajax({
						async: false,
						url: url_,
						type: 'post',
						success: function(res)
						{
								$(lab_id).remove();							
						},
						error: function(err)
						{
								$(lab_id).remove();								
						}
		
		})

	}
</script>