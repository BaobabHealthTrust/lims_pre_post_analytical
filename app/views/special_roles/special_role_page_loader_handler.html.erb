
  <%= javascript_include_tag "jquery" %>
  <%= javascript_include_tag "bootstrap" %>
  <%= stylesheet_link_tag "bootstrap.min" %>
  <%= stylesheet_link_tag "extras/main_window" %>
  <%= stylesheet_link_tag "extras/footer" %>

</style>

<div id="lbl_main_window" class="container-fluid" style="">
	<span id="lbl1" style=" color: blue; font-weight:bold;font-size: 2em; "> Lab Order Entry </span> 
	<span style="color: blue;float: right; font-weight:bold;font-size: 2em;">
	LIMS </span> <br/>
	<span style="color: blue;  float: right;">Lab Information Management System </span>

</div>


<div id="main_window_container" class="container-fluid "  style="padding-top: 20px;">

	<div class="col-sm-offset-2 col-sm-8 col-sm-offset-2" style="background-color: #eeeeee; border-bottom: thick solid #eeeeee; padding-bottom: 5px;padding-top: 5px; margin-bottom: 15px;">

		<span style="float: right;">
			<button class="btn btn-primary btn-sm" onmousedown="document.location='/add_ward_page_loader'" >Add ward</button>
		</span>

	</div>

	<div class="col-sm-offset-3 col-sm-6 col-sm-offset-3" style="overflow-x: 10px;">
		<table class="table">
			<thead style="background-color: #eeeeee;">
				<tr>
					<th>Ward</th>
					<th>Category</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody>
				<% if !@wards.blank? %>
					<% @wards.each do |r| %>
						<% id = r['id'] %>
						<tr id="<%= id %>">
							<td><%= r['name'] %></td>
							<td><%= r['category'] %></td>
							<td>
								<button class="btn btn-primary btn-sm" style="background-color: red" 
								 	onmousedown="deleteWard('<%= id %>')" >delete
								</button>
								<button class="btn btn-primary btn-sm" onmousedown="document.location='/add_user_page_loader'" >edit
								</button>
							</td>
						</tr>		
					<% end %>
				<% end %>		
			</tbody>
		</table>
	
	</div>


</div>


<div class="footer">
  <button class="btn-back btn btn-lg btn-success" onmousedown="document.location='/view_settings'" >Back</button>
</div>

<script type="text/javascript">
	
	function deleteWard(id)
	{	
		var _url = "/delete_ward?ward_id=" + id;
		
		jQuery.ajax({
						async: false,
						url: _url,
						type: 'post',
						success: function(res)
						{
							$(id).remove();							
						},
						error: function(err)
						{
							$(id).remove();							
											
						}
		
		})
	}

</script>