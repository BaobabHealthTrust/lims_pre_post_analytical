<% @sample_results %>
<div id="main_window_container" class="container-fluid">
		<div class="container" style="margin-top: 20px;border-bottom: thin solid lightblue; padding-bottom: 10px;">
			
			<div>
				<p>
					<span>Patient Id: 000000000</span>
					<span style="margin-left: 10px;">Patient Name: Gift Malolo</span>
					<span style="margin-left: 10px;">Sex: Male</span>
					<span style="margin-left: 10px;">Address: Area 22 </span>
					<span style="margin-left: 10px;">Age: 27</span>
				</p>
				
			</div>
		</div>

		<div class="container" style="margin-top: 5px; border-bottom: thin solid lightblue;padding-bottom: 5px;">
			<input type="text" name="date_ordered" placeholder="date ordered" class="input">
			<%= select_tag(:sample_type,  options_for_select(['Select Sample','Blood','Urin']), 
				:helpText=> "Sample Type", 
				:tt_requireNextClick =>false,
			)%>

			<button class="btn btn-info glyphicon-search">search</button>
		</div>

		<div class="container" style="margin-top: 5px;">
			
			<table class="table">
				<thead>
					<tr>
						<th>Accession Number</th>
						<th>Date</th>
						<th>Sample Type</th>
						<th>Status</th>
						<th>Test Done</th>
						<th>Action</th>
					</tr>
				</thead>
				<tbody>
					
					<% @sample_results.each do |result| %>
						<tr id="<%= result[0] %>">
							<td><%= result[0] %></td>
							<td><%= result[1][:date] %></td>
							<td><%= result[1][:sample_type] %></td>
							<td><%= result[1][:status] %></td>
							<td><%= result[1][:test_done] %></td>
							<td>
								<button class="btn btn-medium btn-info" 
									onmousedown="document.location='/view_individual_test_results?id='+this.id"
									id="<%= 'btn' + '_' + result[0].to_s %>">
								View</button>
								<button class="btn btn-medium btn-success">Print</button>
							</td>
						</tr>
					<%end%>

				</tbody>
			</table>
		</div>

		<div class="footer" style="margin-top: 200px;">
			
