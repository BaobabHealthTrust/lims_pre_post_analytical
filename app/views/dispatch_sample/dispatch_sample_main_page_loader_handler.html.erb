<script type="text/javascript">
	
	function deleteWard(id)
	{	
		var _url = "/delete_ward?ward_id=" + id;
		
		jQuery.ajax({
						async: false,
						url: _url,
						type: 'post',
						success: function(res)
						{
							$(id).remove();							
						},
						error: function(err)
						{
							$(id).remove();							
											
						}
		
		})
	}

</script>