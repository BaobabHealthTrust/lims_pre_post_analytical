
  <%= javascript_include_tag "jquery" %>
  <%= javascript_include_tag "bootstrap" %>
  <%= stylesheet_link_tag "bootstrap.min" %>
  <%= stylesheet_link_tag "extras/main_window" %>
  <%= stylesheet_link_tag "extras/footer" %>

</style>

<div id="lbl_main_window" class="container-fluid" style="">
	<span id="lbl1" style=" color: blue; font-weight:bold;font-size: 2em; "> Lab Order Entry </span> 
	<span style="color: blue;float: right; font-weight:bold;font-size: 2em;">
	LIMS </span> <br/>
	<span style="color: blue;  float: right;">Lab Information Management System </span>

</div>


<div id="main_window_container" class="container-fluid "  style="padding-top: 20px;">
	<% if !flash.blank? %>
					<% flash.each do |key, value| %> 
						<div class="alert alert-<%= key %>"><%= value %></div>
					<% end %>
				<% end %>
	<div class="col-sm-offset-1 col-sm-9 col-sm-offset-2" style="overflow-x: 10px;">
		<input type="text" placeholder="tracking_number" name="search">
		<input type="button" value="search" name="">
	</div>

	<div class="col-sm-offset-1 col-sm-9 col-sm-offset-2" style="overflow-x: 10px;">
		<table class="table">
			<thead style="background-color: #eeeeee;">
				<tr>
					<th>Tracking Number</th>
					<th>Sample Type</th>
					<th>Date Drawn</th>
					<th>Patient Id</th>
					<th>Patient Name</th>
					<th>Gender</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody>		

				<% if !@row.blank? %>
					<% @row.each do |r| %>
					
						<tr>
							<td>
								<%= r['tracking_number'] %>
							</td>
							<td>
								<%= r['sample_type'] %>
							</td>
							<td>
								<%= r['date_drawn'] %>
							</td>
							<td>
								<%= r['patient_id'] %>
							</td>
							<td>
								<%= r['patient_name'] %>
							</td>
							<td>
								<%= r['sex'] %>
							</td>
							<td>
								<input style="float: left;" type="checkbox" name="und_sample[]"
											 value="<%= r['tracking_number'] %>"
											 onmousedown="alert(this.und_sample);" >
								
								<span style="float: right;">
									<input type="button" value="dispatch" class="btn btn-primary" id="<%= r['tracking_number'] %>" name=""
											onmousedown="document.location='/capture_dispatcher?trac='+'<%= r['tracking_number'] %>'" >
								</span>
							</td>
						</tr>
					<% end %>	
				<% end %>
			</tbody>
		</table>
	
	</div>


</div>


<div class="footer">
  <button class="btn-back btn btn-lg btn-success" onmousedown="document.location='/view_settings'" >Back</button>
</div>

<script type="text/javascript">
	
	function deleteWard(id)
	{	
		var _url = "/delete_ward?ward_id=" + id;
		
		jQuery.ajax({
						async: false,
						url: _url,
						type: 'post',
						success: function(res)
						{
							$(id).remove();							
						},
						error: function(err)
						{
							$(id).remove();							
											
						}
		
		})
	}

</script>