						<% end %>	

					<% elsif role == "view order results" %>
						<% location = "/scan_patient_barcode?option='+'view_results" %>
						<% image = image_tag("extras/search.png") %>
						<% if given_role == "yes" %> 
								<% session[:view_results_roles] = "yes" %>
						<% end %>
