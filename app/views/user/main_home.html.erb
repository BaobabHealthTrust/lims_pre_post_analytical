
  <%= javascript_include_tag "jquery" %>
  <%= javascript_include_tag "bootstrap" %>
  <%= stylesheet_link_tag "bootstrap.min" %>
  <%= stylesheet_link_tag "extras/footer" %>

<style type="text/css">
	
	.button:hover {background-color: #3e8e41}

	.button:active {
	  background-color: #3e8e41;
	  box-shadow: 0 5px #666;
	  transform: translateY(4px);	
</style>

<div style=" height: 97%;" class="container-fluid" >

	<div class="row">
		<div class="col-sm-4" style="height: 32%; margin-top: 1%; margin-left: 2%;
			 background: -moz-linear-gradient(right,rgba(62, 69, 81, 0.7),rgba(62, 69, 81, 0.3)); 
			 box-shadow: 10px 10px 5px lightgrey; border-radius: 2%;">

			<h1 style="color: white;text-shadow: 2px 2px 4px #000000;">LIMS Order Entry</h1>
				<p style="color: black;text-shadow: 2px 2px 4px #000000; font-weight:bold;">Facility Name <br/>
					<span class="color:white;" style="">Kawale Health Centre</span></p>

					<p style="color: black;text-shadow: 2px 2px 4px #000000;;font-weight:bold;">Ward/Location <br/>
					<span class="text-white" style=""><%= session[:ward] %></span>
				</p>

		</div>

		<div class="col-sm-7" style="margin-top: 1%;">
			<div style=" overflow: auto; height: 32%; padding-top: 1%;padding-left: 1%;padding-right: 1%;border: thin solid lightgrey;
			    ">

				<div>	
						<div class="col-sm-8">
							
					
						</div>
						<div class="col-sm-4">
							<div class="panel panel-default" style="color: blue;box-shadow: 10px 10px 5px lightgrey;">
								<h4 style="text-align: center;font-weight: bold"> Home</h4>
							</div>
							
						</div>
				</div>
				<div  style="margin-top: 12.8%;">
					<div class="col-sm-4">
						<div class="panel panel-default" style="color: #1c2a48;box-shadow: 10px 10px 5px lightgrey;">
							<div  class="panel-heading" style="color: #1c2a48 ; font-weight:bold; text-align: center;">Orders with No Results</div>
							<div class="panel-body" style="font-size: 2em;font-weight:bold; text-align: center;">0 </div>
						</div>
					</div>

					<div class="col-sm-4">
						<div class="panel panel-default" style="color:lightgreen;box-shadow: 10px 10px 5px lightgrey;">
							<% if @requested_sample >0 %>
								<div  class="panel-heading" style="color: red ; font-weight:bold; text-align: center;">	 
								  Requested Orders</div>
								<div class="panel-body" style="color:red; font-size: 2em; font-weight:bold; text-align: center;">
								 <%= @requested_sample %> </div>
							<% else %>
								<div  class="panel-heading" style="color: #1c2a48; font-weight:bold; text-align: center;"> 
								  Requested Orders</div>
								<div class="panel-body" style="color: #1c2a48; font-size: 2em; font-weight:bold; text-align: center;">
								 <%= @requested_sample %> 
								</div>
							<% end %>
						
						</div>
					</div>

					<div class="col-sm-4">
						<div class="panel panel-default" style="color: blue;box-shadow: 10px 10px 5px lightgrey;">
								<% if @undispatched_sample_count >0 %>
									<div  class="panel-heading" style="color:red; font-weight:bold; text-align: center;">Undispatched Samples</div>
									<div class="panel-body" style="font-size: 2em; color:red; font-weight:bold; text-align: center;">
										<%= @undispatched_sample_count %></div>
								<% else %>
									<div  class="panel-heading" style="color:#1c2a48; font-weight:bold; text-align: center;">Undispatched Samples</div>
									<div class="panel-body" style="font-size: 2em; color:#1c2a48; font-weight:bold; text-align: center;">
									<%= @undispatched_sample_count %></div>
								<% end %>

						</div>
					</div>
			    </div>
			</div>
		</div>
	</div>








	<div class="row">
		<div style="border: thick solid lightgrey; height: 55%;margin-left: 2%;margin-right: 2%; margin-top: 1%;
		overflow: auto;
		">
			
			<div class="col-sm-offset-1 col-sm-10 col-sm-offset-1" style="margin-top: 5%;">
				<% counter =1 %>
				
				<% @role.each do |r| %>
					<% given_role = r.split("_")[1] %>
					<% role = r.split("_")[0] %>

					<% if role == "order test" %>
						<% location = "/scan_patient_barcode?option='+'order_test" %>

					<% elsif role == "view order results" %>
						<% location = "/scan_patient_barcode?option='+'view_results" %>

					<% elsif role == "dispatch sample" %>
						<% location = "/un_dispatched_samples"%>

					<% elsif role == "request order" %>
						<% location = "/scan_patient_barcode?option='+'request_order" %>

					<% elsif role == "add test" %>
						<% location = "/scan_patient_barcode?option='+'add_test_to_order" %>

					<% elsif role == "draw sample" %>
						<% location = "/draw_sample" %>

					<% elsif role == "system settings" %>
						<% location = "/view_settings" %>
					<% end %>

				    <% if given_role == "yes" %> 
						<% if counter == 1 or counter == 2 or counter ==3 %>
							<% if counter == 1 %>
							   <div>
							
									<div id="order_test" style="background-color: #1c2a48; cursor: pointer;color:white; margin-bottom: 10px;border-top-right-radius: 50px;border-bottom-right-radius: 50px;" 
										class="button col-sm-5 btn btn-lg " onmousedown="document.location='<%= location %>';">
										
										<span style="float: right;"> <%= role %>
																 <%= image_tag("extras/order_test.png") %>
										</span>
											
									</div>
							<% end %>

							<% if counter == 2 %>
									<div style="background-color: #1c2a48; cursor: pointer; margin-bottom: 15px; color:white; border-top-right-radius: 50px;border-bottom-right-radius: 50px;"
												class= "button col-sm-offset-1 col-sm-5 btn btn-lg "
												onmousedown="document.location='<%= location %>';">
													<span style="float: right;"><%= role %>
																	 <%= image_tag("extras/order_test.png") %>
											</span>
									</div>	
										
								
							<% end %>

							<% if counter == 3 %>		
								

									<div style="background-color: #1c2a48; cursor: pointer;margin-bottom: 10px; color:white;border-top-right-radius: 50px; border-bottom-right-radius: 50px;"
											class="button col-sm-5 btn btn-lg " onmousedown="document.location='<%= location %>';">
											<span style="float: right;"><%=role %>
																 <%= image_tag("extras/order_test.png") %>
											</span>
									</div>
								</div>
							<% end %>
							<% counter = counter + 1 %>
						
						
						<% elsif counter == 4 or counter == 5 or counter == 6 %>
							<% if counter == 4 %>
									<div>
										<div style="background-color: #1c2a48; cursor: pointer;color:white; margin-bottom: 10px; border-top-right-radius: 50px;border-bottom-right-radius: 50px;"
											class="button col-sm-offset-1 col-sm-5 btn btn-lg "
											 onmousedown="document.location='<%= location %>';">
											<span style="float: right;"><%=role %>
																 <%= image_tag("extras/order_test.png") %>
											</span>
										</div>			
									
								
							<% end %>
							<% if counter == 5 %>	
								
									<div style="background-color: #1c2a48; cursor: pointer;color:white; margin-bottom: 10px;border-top-right-radius: 50px;border-bottom-right-radius: 50px;"
										class="button col-sm-5 btn btn-lg " onmousedown="document.location='<%= location %>';">
										<span style="float: right;"><%= role %>
															 <%= image_tag("extras/order_test.png") %>
										</span> 
									</div>
							<% end %>

							<% if counter == 6 %>
										<div style="background-color: #1c2a48; cursor: pointer;color:white; margin-bottom: 10px; border-top-right-radius: 50px;border-bottom-right-radius: 50px;"
											class="button col-sm-offset-1 col-sm-5 btn btn-lg  "
											onmousedown="document.location='<%= location %>';">
											<span style="float: right;"><%= role %> 
																 <%= image_tag("extras/order_test.png") %>
										</span>
										</div>				
								</div>
							<% end %>

							<% counter = counter + 1 %>
						
						<% elsif counter == 7 %>	
								<div>
										<div style="background-color: red; cursor: pointer; color:black;border-top-right-radius: 50px; border-bottom-right-radius: 50px;"
											class="button col-sm-5 btn btn-lg " onmousedown="document.location='<%= location %>';">
											<span style="float: right;"><%= role %>
																 <%= image_tag("extras/order_test.png") %>
											</span>
										</div>
								</div>			
						<% end %>
					<% end %>
				<% end %>
				<% counter = 1 %>				

			</div>


		</div>
	</div>

</div>

<div class="footer">
 
  	<span style="float: right;">
			<button class="btns btn btn-lg btn-danger" 
	     					id="log_out"
	     					onmousedown="document.location='/log_out'">
	     				Log Out
	    	</button>
    </span>
</div>

<script type="text/javascript">
	
$(document).ready(function()
{
	document.getElementById("order_test").onmousedown = new function ("return false");
})
		

</script>