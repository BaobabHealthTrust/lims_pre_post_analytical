
<%= form_tag("/login", id: "login_form", method: 'post', enctype: 'multipart/form-data') do %>


	<%= text_field(:user, :username, :helpText=> "Enter Username", 
	    :textCase => "lower",
	    :field_type => "password")%><br>

	<%= password_field(:user, :password, :helpText => "Enter Password", 
		:textCase => "lower",
	    :field_type => "password")%><br>

	<%= select_tag "ward_location", options_for_select(@wards),
		{:helpText => "Select Ward",
	    :field_type => "location"}%><br>


<%end%>
